            <div class="card">
                <div class="card-header">Promotions</div>
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center title-2">Ajouter une promotion</h3>
                    </div>
                    <hr>
                    {{ form_start(f,{attr:{'novalidate':'novalidate'}}) }}

                        <div class="form-group">
