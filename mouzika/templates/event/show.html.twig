<!DOCTYPE html>

<title>Event</title>

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idevent</th>
                <td>{{ event.idevent }}</td>
            </tr>
            <tr>
                <th>Nomevent</th>
                <td>{{ event.nomevent }}</td>
            </tr>
            <tr>
                <th>Nomartiste</th>
                <td>{{ event.nomartiste }}</td>
            </tr>
            <tr>
                <th>Localisationevent</th>
